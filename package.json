{
    "name": "sample",
    "version": "0.2",
    "description": "Sample code to test github action",
    "author": "Dave",
    "contributors": [
        "dave Franco <davefranco1987@gmail.com>"
    ],
    "engines": {
        "node": ">=14"
    },
    "engineStrict": true,
    "dependencies": {
        "@aws-crypto/client-node": "^2.0.0",
        "@aws-sdk/client-kms": "^3.14.0",
        "aws-sdk": "^2.897.0",
        "axios": "^0.21.0",
        "client-oauth2": "^4.3.3",
        "crypto": "^1.0.1",
        "dotenv": "^8.2.0",
        "fastify": "^3.15.1",
        "fastify-cors": "^6.0.0",
        "fastify-jaeger": "github:dave/fastify-jaeger",
        "fastify-metrics": "^7.1.0",
        "hyperid": "^2.1.0",
        "uuid": "^8.3.2",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@cucumber/cucumber": "^7.2.1",
        "@tsconfig/node14": "^1.0.0",
        "@types/proxyquire": "^1.3.28",
        "@types/sinon-chai": "^3.2.5",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "chai": "^4.3.4",
        "copyfiles": "^2.4.1",
        "eslint": "^7.25.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-react": "^7.23.2",
        "nodemon": "^2.0.7",
        "proxyquire": "^2.1.3",
        "rimraf": "^3.0.2",
        "sinon": "^10.0.0",
        "sinon-chai": "^3.6.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "scripts": {
        "install:fresh": "rm -rf node_modules && npm install",
        "read:version": "echo $npm_package_version",
        "lint": "eslint -c './.eslintrc' '**/*.ts' --fix",
        "cucumber": "export NODE_ENV=test && cucumber-js src/tests/features/**/*.feature -p default",
        "test": "npm run cucumber",
        "test:only": "npm run cucumber -- --tags",
        "build:clean": "rimraf dist/",
        "build:copy:assets": "copyup -E -V -F src/**/*.html src/**/*.css src/**/*.png dist/src/",
        "build:copy:config": "copyfiles -E -V -F package*.json docker/prod/**/* dist/",
        "build:prepare": "npm run build:clean && npm run build:copy:assets && npm run build:copy:config",
        "build:code": "tsc && tsc -p tsconfig.json",
        "build": "npm run lint && npm run test && npm run build:prepare && npm run build:code",
        "start:dev": "export NODE_ENV=development && export NODE_OPTIONS=--max_old_space_size=8192 && export NODE_OPTIONS=--trace-warnings && nodemon",
        "start:stag": "export NODE_ENV=staging && ./node_modules/.bin/ts-node index.ts",
        "start:prod": "export NODE_ENV=production && node --inspect dist/index.js",
        "start:docker:prod": "export NODE_ENV=production && node index.js",
        "release": "node scripts/release.js",
        "release:major": "node scripts/release.js --major"
    },
    "license": "ISC"
}
